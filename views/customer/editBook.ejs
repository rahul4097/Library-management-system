<div class="d-flex justify-content-between flex-md nowrap align-items-center pt-3 pb-2 mb-2 border-bottom">
    <h4 class="h2" ><span class="text-danger">Editing</span> <%= customer.title %> <%= customer.authorname %></h4>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary" class="btn btn-sm btn-outline-secondary">?</a>
        </div>
    </div>
</div>
<div class="col-py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/book">Books Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= customer.title %> <%= customer.authorname %></li> 
                </ol>
            </nav>
        </div>
        <div class="col text-end-fw-lighter">
            <b>Last Updated <%=  new Date(customer.updatedAt).toUTCString() %></b><br/>
            <b class="text-danger">UserId: </b><%= customer._id %>
        </div>
    </div>
</div>

<form action="/book/editbook/<%= customer._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" id="title" value="<%= customer.title %>" placeholder="Title"
                required>
        </div>
        <div class="col">
            <label for="authorname">Author Name</label>
            <input type="text" name="authorname" class="form-control" id="authorname" value="<%= customer.authorname %>" placeholder="Author Name"
                required>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="category">Category</label>
            <input type="text" name="category" class="form-control" id="category" value="<%= customer.category %>" placeholder="Telephone" required>
        </div>
        <div class="col">
            <label for="price">Price</label>
            <input type="text" name="price" class="form-control" id="price" value="<%= customer.price %>" placeholder="Price" required>
        </div>
    </div>

    <div class="form-group mb-4">
        <label for="details">Book Details</label>
        <textarea  class="form-control" name="details" id="details" cols="30" rows="12"  placeholder="Customer Details"><%= customer.details %></textarea>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Book</button>



        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Book</button>
    </div>
    

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a book record!</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>
                <div class="modal-body">
                    <p>
                        This will remove the customer record of <b class="fw-bold"><%= customer.title %> <%= customer.authorname %></b><br>
                        Are you sure?
                    </p>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"data-bs-dismiss="modal">Close</button>

                <form action="/book/editbook/<%= customer._id %>?_method=DELETE" method="POST" class="position-relative">
                <button type="submit" class="btn btn-primary"> Yes, Remove Book</button></form>
            </div>
        </div>
    </div>
</div>