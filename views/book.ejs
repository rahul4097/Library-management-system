<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
        <h1 class="h2 text-primary">Dashboard - All Books</h1>
        <div class="btn-toolbar">
            <div class="btn-group me-2">
                <a href="/book/addBook" class="btn btn-sm btn-outline-primary"><i class="bi bi-plus"></i> New Book</a>
            </div>
        </div>
    </div>

    <% bookMessages.forEach(element => { %>
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            <%= element %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% }) %>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="text-danger">
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(element => { %>
                    <tr class="align-middle">
                        <td><%= element.title %></td>
                        <td><%= element.authorname %></td>
                        <td><%= element.category %></td>
                        <td>$ <%= element.price %></td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a href="/book/viewBook/<%= element._id %>" class="btn btn-primary btn-sm"><i class="bi bi-eye"></i></a>
                                <a href="/book/editBook/<%= element._id %>" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                                <form action="/book/editBook/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
